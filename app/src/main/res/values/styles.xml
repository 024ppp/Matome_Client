<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  Page1  -->
    <style name="blockBorder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/frame_textview</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="TextViewStyle_White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/frame_textview_white</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/frame_edittext</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <!--  Page2  -->
    <style name="TextViewStyle_Page2_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/frame_textview_title</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="TextViewStyle_Page2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/frame_textview</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="TextViewStyle_White_Page2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/frame_textview_white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="EditTextStyle_Page2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/frame_edittext</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <!--タイトルテキストの色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--ハンバーガーボタンなどのアイコンの色-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
